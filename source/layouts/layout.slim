doctype html
html
  head
    meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"
    meta charset="utf-8"
    meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport"

    title = current_page.data.title || "SSFN - A Global Creative Collective"

    link href="https://fonts.googleapis.com/css?family=Space+Mono:400,700" rel="stylesheet"

    == stylesheet_link_tag "bootstrap-grid.min", "site"
    == javascript_include_tag  "jquery", "waypoints", "all"
  body class="#{page_classes}"
    main.site-wrap
      == yield

      // Global site tag (gtag.js) - Google Analytics
      script async="async" src="https://www.googletagmanager.com/gtag/js?id=UA-107727439-1"
      javascript:
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-107727439-1');
