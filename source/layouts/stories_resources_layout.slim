= wrap_layout :stories_layout do

  .container-fluid
    - current_page.data.content.each do |content|
      - if content.list
        .row
          .col-12.col-md-10.offset-md-1.col-lg-6.offset-lg-3
            - content.list.each do |list|
              h2 = list.type
              - if list.sources
                - list.sources.each do |source|
                  .comp-card
                    .comp-card--resource
                      .comp-card-img
                        == image_tag source.img, alt: source.name, class: ""
                      .comp-card-data
                        .comp-card-data--name
                          h3.comp-card-ele = source.name
                        .comp-card-data--type
                          h4.comp-card-ele = source.cat
                        .comp-card-data--description
                          p.comp-card-ele = source.desc
                        .comp-card-data--url
                          == link_to 'Link', source.link, class: "comp-card-ele"
